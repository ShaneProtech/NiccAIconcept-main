@socketio.on('connect')
def handle_connect():
    """Initialize conversation history for new connections"""
    session_id = request.sid
    
    # Create a new chat when a client connects
    user_id = session.get('user_id', 'anonymous')
    chat_id = create_new_chat(user_id)
    
